<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6f2ff"
    tools:context="com.univ_setif.fsciences.qcm.ShowCorrection">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:fitsSystemWindows="true"
        app:cardCornerRadius="@dimen/card_padding"
        app:cardElevation="@dimen/activity_vertical_margin">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="false"
            android:orientation="vertical"
            android:fadingEdge="none"
            android:weightSum="2"

            >
            <com.ramotion.foldingcell.FoldingCell


                android:layout_weight="0.6"

                android:id="@+id/folding_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_weight="1.95"
                    android:id="@+id/opened_card"
                    android:layout_width="match_parent"
                    android:layout_height="380sp"
                    android:layout_margin="8sp"
                   android:visibility="gone"

                    >

                    <LinearLayout
                        android:weightSum="6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Information "
                                android:textColor="@android:color/black"
                                android:layout_centerHorizontal="true"
                                android:textSize="30sp"
                                android:fontFamily="@font/gnyrwn971"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Nom :Jhon Doe"
                                android:gravity="bottom"
                                android:textColor="@android:color/black"
                                android:layout_margin="10sp"
                                android:fontFamily="@font/gnyrwn971"
                                android:textSize="19sp"/>

                            <TextView
                                android:id="@+id/Note"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"


                                android:fontFamily="@font/gnyrwn971"
                                android:text="Note : 15/20 "
                                android:layout_alignParentRight="true"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="18sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/module"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/gnyrwn971"
                                android:text="GÃ©nieLogiciel"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/usertime"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/gnyrwn971"
                                android:text="Votre Temps est : 22:07"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="19sp" />



                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/Qcmtime"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:fontFamily="@font/gnyrwn971"
                                android:text="Temps de l'examen : 22:22"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="19sp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/questioncount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre des Question :20"
                                android:layout_centerHorizontal="true"
                                android:textSize="19sp"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/gnyrwn971"/>

                        </RelativeLayout>






                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/note_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >
                    <android.support.v7.widget.CardView
                        android:id="@+id/cardviewquestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"





                        app:cardElevation="15dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:background="@drawable/bg_login2"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingBottom="20dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="20dp">

                                <TextView
                                    android:id="@+id/finalnote"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/gnyrwn971"
                                    android:text="Votre note est : "
                                    android:textColor="@android:color/white"
                                    android:textSize="28dp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/show_note"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentEnd="true"


                                    android:fontFamily="cursive"
                                    android:gravity="center_vertical"
                                    android:text="00/26"
                                    android:textAlignment="center"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp" />


                            </RelativeLayout>
                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                </FrameLayout>

            </com.ramotion.foldingcell.FoldingCell>


            <LinearLayout


                android:id="@+id/linearLayout4"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginBottom="8dp"


                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/folding_cell"
                app:layout_constraintVertical_bias="0.96">


                <Button
                    android:id="@+id/correction"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"


                    android:layout_alignParentBottom="true"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="@font/gnyrwn971"
                    android:onClick="onViewCorrectAnswerClick"
                    android:text="@string/voirCorrection"


                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/back_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"

                    android:layout_below="@+id/correction"
                    android:layout_marginBottom="5sp"
                    android:layout_marginTop="5sp"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="@font/gnyrwn971"
                    android:text="@string/retour"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/add_question"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"


                    android:visibility="gone"
                    android:layout_below="@+id/back_menu"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10sp"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="@font/gnyrwn971"
                    android:text="@string/ajouterUser"
                    android:textColor="@android:color/white"

                    />


            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
