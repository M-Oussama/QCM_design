<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/param_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:paddingStart="8dp"
        android:text="Paramètres Avancées"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/cardview_light_background"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/minutes"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/param_text"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/secondes"
        app:layout_constraintBottom_toBottomOf="@+id/secondes"
        app:layout_constraintEnd_toStartOf="@+id/secondes"
        app:layout_constraintTop_toTopOf="@+id/secondes" />

    <NumberPicker
        android:id="@+id/secondes"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/minutes"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/param_text" />

    <TextView
        android:id="@+id/temps_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minutes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Numero de Questions"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/nbrQCM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/param_text"
        app:layout_constraintVertical_bias="0.816" />

    <TextView
        android:id="@+id/temps_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/minutes"
        android:layout_alignStart="@+id/temps_txt"
        android:layout_marginBottom="20dp"
        android:text="Temps:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="80dp" />

    <NumberPicker
        android:id="@+id/nbrQCM"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_below="@+id/temps_txt"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/temps_txt2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/param_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/temps_txt"
        android:layout_marginTop="146dp"
        android:text="Sauvegarder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="351dp" />
</RelativeLayout>