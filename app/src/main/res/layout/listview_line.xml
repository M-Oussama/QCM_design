<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dip">


    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/question"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answerText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/questionText"
        android:layout_below="@+id/questionText"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/answer_1"
        android:layout_alignLeft="@+id/questionText"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/answerText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/answerText1"
        android:layout_below="@+id/answerText1"
        android:layout_marginTop="14dp"
        android:text="@string/answer_2"
        android:layout_alignLeft="@+id/answerText1" />

    <TextView
        android:id="@+id/answerText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/answerText2"
        android:layout_below="@+id/answerText2"
        android:layout_marginTop="14dp"
        android:text="@string/answer_3"
        android:layout_alignLeft="@+id/answerText2" />

    <TextView
        android:id="@+id/answerText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/answerText3"
        android:layout_below="@+id/answerText3"
        android:layout_marginTop="14dp"
        android:text="@string/answer_4"
        android:layout_alignLeft="@+id/answerText3" />
</RelativeLayout>