<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.univ_setif.fsciences.qcm.fragments.AdminSpaceFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:text="To gain administrative privileges such as the possibility of viewing, adding, updating and/or deleteing quizzes, you need to input the administrator's password."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <include
        layout="@layout/dialog_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text"
        android:layout_marginTop="46dp" />
</RelativeLayout>
