<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="20sp"
    tools:cardCornerRadius="20sp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:weightSum="6"
        tools:context="com.univ_setif.fsciences.qcm.fragments.DisplayQcm">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:alpha=".6"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            app:cardCornerRadius="20sp"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/questionContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/gnyrwn971"
                    android:textColor="@color/black_de"
                    android:gravity="center"
                    android:padding="6sp"
                    android:text="Question"
                    android:textSize="24sp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <info.hoang8f.widget.FButton
            android:layout_marginTop="20sp"
            android:id="@+id/answerContent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/gnyrwn971"
            android:text="@string/answer_1"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:padding="3sp"
            android:layout_weight="0.5"
            android:textColor="@android:color/white"

            android:textSize="12sp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/answerContent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="3sp"
            android:textColor="@android:color/white"
            android:text="@string/answer_2"
            android:fontFamily="@font/gnyrwn971"
            android:layout_marginStart="20dp"
            android:layout_weight="0.5"

            android:textSize="12sp" />



        <info.hoang8f.widget.FButton
            android:id="@+id/answerContent3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5sp"
            android:text="@string/answer_3"
            android:padding="3sp"
            android:layout_weight="0.5"
            android:fontFamily="@font/gnyrwn971"
            android:textColor="@android:color/white"

            android:textSize="12sp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/answerContent4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/answer_4"
            android:padding="3sp"
            android:fontFamily="@font/gnyrwn971"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"

            android:textSize="12sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>

