<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:weightSum="12">

    <android.support.v7.widget.CardView
        android:id="@+id/user_information"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_background_images"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="center_horizontal"
                android:text="@string/welcome"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/user_info_pic"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:contentDescription="@string/user_picture"
                android:src="@drawable/userhomeicon" />

            <TextView
                android:id="@+id/user_info_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="@string/no_user"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical"

        android:weightSum="3">


        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/startcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onStartClick"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_background_images"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="3"
                        android:contentDescription="@string/start"
                        android:src="@drawable/start" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.5"
                        android:fontFamily="cursive"
                        android:text="@string/start_maj"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:fontFamily="cursive"
                        android:text="@string/startdesc"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"


            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/settingscard"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:layout_marginEnd="10sp"


                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10sp"

                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_background_images"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="3"
                        android:contentDescription="@string/settingsdesc"
                        android:src="@drawable/settings1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.5"
                        android:fontFamily="cursive"
                        android:text="@string/settings_maj"
                        android:textColor="@android:color/black"

                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="134dp"
                        android:layout_height="34dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:fontFamily="cursive"
                        android:gravity="center_horizontal"
                        android:text="@string/settingsdesc"
                        android:textColor="@android:color/black"

                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/helpcard"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_background_images"

                    android:orientation="vertical"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.7"
                        android:contentDescription="@string/helpdesc"
                        android:src="@drawable/help" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.3"
                        android:fontFamily="cursive"
                        android:text="@string/help_maj"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:layout_weight="0.1"
                        android:fontFamily="cursive"
                        android:gravity="center_horizontal"
                        android:text="@string/helpdesc"
                        android:textColor="@android:color/black" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>