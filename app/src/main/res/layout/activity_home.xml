<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"


   >
    <LinearLayout


        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="12">
        <android.support.v7.widget.CardView
            android:layout_weight="0"
            android:id="@+id/cardview"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"
            >

            <LinearLayout

                android:background="@drawable/white_background_images"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:gravity="center_horizontal"
                    android:text="Welcome"
                    android:textSize="25dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/userhomeicon" />

                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="John Doe"
                    android:textSize="25dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView"
            android:layout_weight="6"
            android:orientation="vertical"

            android:weightSum="3">


            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="2"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"

                    android:elevation="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"


                    >

                    <LinearLayout
                        android:background="@drawable/white_background_images"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical"
                        android:weightSum="3">

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="3"
                            android:src="@drawable/start" />

                        <TextView
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.5"
                            android:fontFamily="cursive"
                            android:text="START"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:fontFamily="cursive"
                            android:text="@string/startdesc"
                            android:textAlignment="center" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.9"


                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/exitcard"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3sp"
                    android:layout_marginEnd="10sp"


                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10sp"

                    android:layout_weight="1"
                    android:elevation="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"


                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
 android:background="@drawable/white_background_images"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="3"
                            android:src="@drawable/settings1" />

                        <TextView
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.5"
                            android:fontFamily="cursive"
                            android:text="SETTINGS"

                            android:textStyle="bold" />

                        <TextView
                            android:textColor="@android:color/black"
                            android:layout_width="135dp"
                            android:layout_height="34dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:fontFamily="cursive"
                            android:gravity="center_horizontal"
                            android:text="@string/settingsdesc"

                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/card1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3sp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:elevation="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:background="@drawable/white_background_images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.7"
                            android:src="@drawable/help" />

                        <TextView
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1.3"
                            android:fontFamily="cursive"
                            android:text="HELP"
                            android:textStyle="bold" />

                        <TextView

                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="0.1"
                            android:fontFamily="cursive"
                            android:gravity="center_horizontal"
                            android:text="@string/helpdesc" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>









</RelativeLayout>