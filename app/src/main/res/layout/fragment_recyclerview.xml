<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:weightSum="3">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"




        android:orientation="vertical">

        <include  layout="@layout/hvp_header_placeholder" />


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                />



        </LinearLayout>


    </LinearLayout>

</FrameLayout>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menufab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:menu_colorNormal="@android:color/holo_blue_dark"
        android:padding="10sp"

        fab:menu_fab_hide_animation="@anim/hide_to_bottom"
        fab:menu_fab_show_animation="@anim/show_from_bottom">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/New_Quiz_Subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@android:color/holo_blue_dark"
            fab:fab_size="mini"
            android:src="@drawable/newquizsubject"
            fab:fab_label="New Quiz Subject" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/New_Quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@android:color/holo_blue_dark"
            android:src="@drawable/questionicon"
            fab:fab_size="mini"
            fab:fab_label="New Quiz" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/Remove_Quiz_Subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@android:color/holo_blue_dark"
            fab:fab_size="mini"
            android:src="@drawable/delete"
            fab:fab_label="Remove Quiz Subject" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/SessionSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sessionsettings"
            app:fab_colorNormal="@android:color/holo_blue_dark"
            fab:fab_size="mini"
            fab:fab_label="Session Settings" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@android:color/holo_blue_dark"
            fab:fab_size="mini"
            android:src="@drawable/search"
            fab:fab_label="Search" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@android:color/holo_blue_dark"
            fab:fab_size="mini"
            android:src="@drawable/logout"
            fab:fab_label="LOG OUT " />

    </com.github.clans.fab.FloatingActionMenu>
</FrameLayout>