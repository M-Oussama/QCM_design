<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:layout_rowWeight="2">


    <LinearLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"

        android:baselineAligned="false"
        >



        <com.ramotion.foldingcell.FoldingCell
            android:id="@+id/folding_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <FrameLayout
                android:id="@+id/cell_content_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"


                >
                <RelativeLayout
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"



                    >
                    <!-- content header line -->
                    <RelativeLayout

                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <EditText
                            android:id="@+id/questiontitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:padding="20sp"
                            android:layout_margin="10sp"
                            android:hint="Question"
                            android:fontFamily="@font/gnyrwn971"
                            android:gravity="center_horizontal"/>





                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="9dp"
                        android:src="@android:color/black" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="6dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="9dp">

                        <!-- avatar and name part -->
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/answer"
                                style="@style/ContentMainBadgeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/gnyrwn971"
                                android:text="Answer1"
                                android:textColor="@android:color/black" />

                            <CheckBox
                                android:id="@+id/isCorrect1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/answer"
                                android:layout_marginTop="5sp"
                                android:gravity="center_vertical"

                                />
                            <EditText
                                android:id="@+id/answer1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:padding="20sp"
                                android:layout_margin="10sp"
                                android:hint="Answer1"
                                android:fontFamily="@font/gnyrwn971"
                                android:layout_toRightOf="@id/isCorrect1"
                                android:gravity="center_horizontal"/>



                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="6dp"
                            android:layout_marginTop="9dp"
                            android:src="@android:color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/answer2title"
                                    style="@style/ContentMainBadgeTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/gnyrwn971"
                                    android:text="Answer2"
                                    android:textColor="@android:color/black" />

                                <CheckBox
                                    android:id="@+id/isCorrect2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/answer2title"
                                    android:layout_marginTop="5sp"
                                    />
                                <EditText
                                    android:id="@+id/answer2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:padding="20sp"
                                    android:layout_margin="10sp"
                                    android:hint="Answer2"
                                    android:fontFamily="@font/gnyrwn971"
                                    android:layout_toRightOf="@id/isCorrect2"
                                    android:gravity="center_horizontal"/>



                            </RelativeLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="6dp"
                            android:layout_marginTop="9dp"
                            android:src="@android:color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/answer3title"
                                    style="@style/ContentMainBadgeTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:fontFamily="@font/gnyrwn971"
                                    android:text="Answer3"
                                    android:textColor="@android:color/black" />

                                <CheckBox
                                    android:id="@+id/isCorrect3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/answer3title"
                                    android:layout_marginTop="5sp"
                                    />

                                <EditText
                                    android:id="@+id/answer3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:padding="20sp"
                                    android:layout_margin="10sp"
                                    android:hint="Answer3"
                                    android:fontFamily="@font/gnyrwn971"
                                    android:layout_toRightOf="@id/isCorrect3"
                                    android:gravity="center_horizontal"/>


                            </RelativeLayout>

                        </LinearLayout>


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="6dp"
                            android:layout_marginTop="9dp"
                            android:src="@android:color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/answer4title"
                                    style="@style/ContentMainBadgeTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/gnyrwn971"
                                    android:text="Answer4"
                                    android:textColor="@android:color/black" />

                                <CheckBox
                                    android:id="@+id/isCorrect4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/answer4title"
                                    android:layout_marginTop="5sp"
                                />


                                <EditText
                                    android:id="@+id/answer4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:padding="20sp"
                                    android:layout_margin="10sp"
                                    android:hint="Answer4"
                                    android:fontFamily="@font/gnyrwn971"
                                    android:layout_toRightOf="@id/isCorrect4"
                                    android:gravity="center_horizontal"/>


                            </RelativeLayout>


                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="6dp"
                            android:layout_marginTop="9dp"
                            android:src="@android:color/black"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                             android:layout_marginBottom="10sp"
                            >
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Button
                                    android:id="@+id/Update"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="UPDATE"
                                    android:onClick="UPDATE"
                                    android:fontFamily="@font/gnyrwn971"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/buttonstyle"
                                    android:visibility="gone"
                                    />
                                <Button
                                    android:id="@+id/add"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ADD"
                                    android:onClick="ADD"
                                    android:fontFamily="@font/gnyrwn971"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/buttonstyle"
                                     android:visibility="gone"
                                    />
                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/cell_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <android.support.v7.widget.CardView
                    android:id="@+id/cardviewquestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"





                    app:cardElevation="15dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_weight="0"
                            android:background="@drawable/bg_login2"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingBottom="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="20dp">

                            <TextView
                                android:id="@+id/questionnumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="1"
                                android:fontFamily="@font/gnyrwn971"
                                android:textColor="@android:color/white"
                                android:textSize="30dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/questioncontent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"
                                android:text="Question"
                                android:textSize="20sp"
                                android:textAlignment="center"
                                android:fontFamily="@font/gnyrwn971"
                                android:textColor="@android:color/black" />


                        </RelativeLayout>
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </FrameLayout>

        </com.ramotion.foldingcell.FoldingCell>


    </LinearLayout>
</ScrollView>